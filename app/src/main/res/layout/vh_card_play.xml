<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vh_card_play__iv__answer"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/md_blue_500"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_help_white_24dp"/>

            <TextView
                android:id="@+id/vh_card_play__tv__front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:maxLines="3"
                android:paddingBottom="18dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:textColor="@color/md_blue_grey_700"
                android:textSize="@dimen/text_size_small"
                tools:text="Card Play"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>